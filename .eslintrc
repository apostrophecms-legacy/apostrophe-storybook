{
  "extends": [
    "apostrophe",
    "plugin:vue/vue3-recommended"
  ],
  "overrides": [
    {
      "files": ["tests/**/*.spec.js"],
      "globals": {
        "describe": true,
        "expect": true,
        "it": true,
        "after": true,
        "before": true
      },
      "rules": {
        "no-console": 0
      }
    }
  ],
  "rules": {
    "no-console": 0,
    "vue/component-tags-order": [
      "warn",
      {
        "order": [
          "template",
          "script",
          "style"
        ]
      }
    ],
    "vue/max-attributes-per-line": [
      "warn",
      {
        "singleline": 2,
        "multiline": 2
      }
    ],
    "vue/singleline-html-element-content-newline": [
      "warn",
      {
        "ignoreWhenNoAttributes": true,
        "ignoreWhenEmpty": true,
        "ignores": [
          "h1",
          "h2",
          "h3",
          "pre",
          "textarea"
        ]
      }
    ],
    "vue/attributes-order": 0
  }
}
